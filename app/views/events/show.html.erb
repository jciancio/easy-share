<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @event.name %>
</p>

<p>
  <strong>Description:</strong>
  <%= @event.description %>
</p>

<p>
  <strong>Creator:</strong>
  <%= @event.created_by %>
</p>

<%= link_to 'Edit', edit_event_path(@event) %> |
<%= link_to 'Add Friends', event_choose_user_path(@event) %>

<h2>Friends</h2>

<ul>
<% @event.users.each do |user| %>
  <% unless user == current_user %>
  <li><%= user %></li>
  <% end %>
<% end %>
</ul>
