<%= form_for([event, photo]) do |f| %>

  <div class="field">
    <%= f.label :picture do %>
      <%= f.file_field :picture %>
      <%= f.hidden_field :picture_cache %>
    <% end %>
  </div>

  <div class="field">
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>

  <div class="field">
    <%= f.label :description %>
    <%= f.text_field :description %>
  </div>

  <div class="actions">
    <%= f.submit 'Upload' %>
  </div>
<% end %>
